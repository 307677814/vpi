{
  "manifest_version": 2,
  "name": "Vpi Plugin",
  "version": "1.0",
  "description": "test for Vpi",
  "browser_action": {
    "default_icon": "vpi.png",
    "default_title": "Vpi Plugin",
    "default_popup": "html/vpi.html"
  },
  "permissions": [
    "<all_urls>"
  ],
  "background": {
    "page": "html/background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/api/test*"
      ],
      "js": [
        "js/vue.js",
        "js/vpi.js"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
